@model IEnumerable<WebApplication.Models.Ingredients>
@{
    ViewData["Title"] = "Index";
}
<h1>Ингредиенты</h1>

<form asp-action="Index" method="get" name="frm">
    <div class="form-actions no-color">
        @Html.DropDownList("AllingrString", ViewBag.Product as SelectList, "Все продукты", new { @id = "Selectt", @class = "form-control", style = "width: 30%;" })
    </div>
</form>
<form asp-action="Create" method="get" class="frmadd">
    <input type="hidden" id="IDProduct" name="ID" />
    <input type="submit" value="Добавить " onclick="func()" class="btn btn- align-content-center" style="color:black">
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Сырье")
            </th>

            <th>
                @Html.DisplayName("Количество")
            </th>
        </tr>
    </thead>

    <tbody class="recruiter">
        @foreach (var item in Model)
        {
            <tr class="recruiter-info" data-custom-type="@Html.DisplayFor(modelItem => item.ProductNavigation.Id)">
                <td>
                    @Html.DisplayFor(modelItem => item.RawMaterialsNavigation.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Countingred)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                   @* <a asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $("select").change(function () {
        $("select").val = $("select");
        let form = document.forms.frm
        form.submit();
    });

    function func() {
        let select = $('#Selectt option:selected').val();
        let input = document.querySelector("#IDProduct");
        input.value = select;
    }

</script>


   