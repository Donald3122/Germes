@model WebApplication.Models.Ingredients

@{
    ViewData["Title"] = "Delete";
}
<h3>Вы точно хотите удалить?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Количество:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Countingred)
        </dd>
        <dt class = "col-sm-2">Продукт:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductNavigation.Name)
        </dd class>
        <dt class = "col-sm-2">Сырье:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RawMaterialsNavigation.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
