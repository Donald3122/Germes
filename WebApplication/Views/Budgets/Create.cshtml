@model WebApplication.Models.Budgets
@{
    ViewData["Title"] = "Создать";
}
<h1>Создать</h1>

<h4>Бюджет</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Budgetamount" class="control-label">Бюджет</label>
                <input asp-for="Budgetamount" class="form-control" />
                <span asp-validation-for="Budgetamount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalePercentage" class="control-label">Процент</label>
                <input asp-for="SalePercentage" class="form-control" />
                <span asp-validation-for="SalePercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bonus" class="control-label"></label>
                <input asp-for="Bonus" class="form-control" />
                <span asp-validation-for="Bonus" class="text-danger">Бонус</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>
