@model WebApplication.Models.Budgets

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="row">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Budgetamount" class="control-label">Бюджет</label>
                        <input asp-for="Budgetamount" class="form-control" style="color:black" />
                        <span asp-validation-for="Budgetamount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SalePercentage" class="control-label">Процент</label>
                        <input asp-for="SalePercentage" class="form-control" style="color:black" />
                        <span asp-validation-for="SalePercentage" class="text-danger"></span>
                    </div>  
                    <div class="form-group">
                        <label asp-for="Bonus" class="control-label">Бонус</label>
                        <input asp-for="Bonus" class="form-control" style="color:black" />
                        <span asp-validation-for="Bonus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-primary" />
                    </div>
                <div>
                    <a asp-action="Index">Назад</a>
                </div>
                </form>
            </div>
        </div>
    </div>

