@model WebApplication.Models.Production

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить</h1>

<h4>Производство</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product" class="control-label">Продукт</label>
                <select asp-for="Product" class ="form-control" asp-items="ViewBag.Product"></select>
            </div>
            <div class="form-group">
                <label asp-for="CountProduction" class="control-label">Количество</label>
                <input asp-for="CountProduction" class="form-control" />
                <span asp-validation-for="CountProduction" class="text-danger"></span>
            </div>
            <div class="Error">
                <p style="color:red">@ViewBag.Message</p>
            </div>
            
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата</label>
                <input asp-for="Date" class="form-control" id="date-input" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Employee" class="control-label">Сотрудник</label>
                <select asp-for="Employee" class ="form-control" asp-items="ViewBag.Employee"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

